{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "noEmitOnError": true,
        "outDir": "js",
        "jsx": "react"
    },
    "filesGlob": [
        "./ts/**/*.ts",
        "./ts/**/*.tsx",
        "./typings/*.d.ts"
    ],
    "files": [
        "./ts/actions/TodoActions.ts",
        "./ts/reducers/Reducers.ts",
        "./ts/reducers/TodoReducers.ts",
        "./ts/stores/Store.ts",
        "./ts/stores/TodoStore.ts",
        "./ts/app.tsx",
        "./ts/components/Footer.tsx",
        "./ts/components/Header.tsx",
        "./ts/components/MainSection.tsx",
        "./ts/components/TodoApp.tsx",
        "./ts/components/TodoItem.tsx",
        "./ts/components/TodoTextInput.tsx",
        "./typings/bundle.d.ts"
    ]
}
